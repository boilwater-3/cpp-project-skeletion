{
    "version": 8,
    "configurePresets": [
        {
            "name": "vs2022",
            "inherits": "vs2022-base",
            "displayName": "vs2022",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "vs2017",
            "inherits": "vs2017-base",
            "displayName": "vs2017",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "llvm-ninja-base-local",
            "hidden": true,
            "inherits": "macos-base",
            "displayName": "llvm-ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_MAKE_PROGRAM": "/opt/homebrew/bin/ninja"
            }
        },
        {
            "name": "llvm-ninja-debug",
            "displayName": "llvm-ninja-debug",
            "inherits": "llvm-ninja-base-local",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "llvm-ninja-release",
            "displayName": "llvm-ninja-release",
            "inherits": "llvm-ninja-base-local",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "vs2022-debug",
            "displayName": "Debug",
            "configurePreset": "vs2022",
            "configuration": "Debug"
        },
        {
            "name": "vs2022-release",
            "displayName": "Release",
            "configurePreset": "vs2022",
            "configuration": "Release"
        },
        {
            "name": "vs2022-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configurePreset": "vs2022",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs2022-minsizerel",
            "displayName": "MinSizeRel",
            "configurePreset": "vs2022",
            "configuration": "MinSizeRel"
        },
        {
            "name": "vs2017-debug",
            "displayName": "Debug",
            "configurePreset": "vs2017",
            "configuration": "Debug"
        },
        {
            "name": "vs2017-release",
            "displayName": "Release",
            "configurePreset": "vs2017",
            "configuration": "Release"
        },
        {
            "name": "vs2017-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configurePreset": "vs2017",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs2017-minsizerel",
            "displayName": "MinSizeRel",
            "configurePreset": "vs2017",
            "configuration": "MinSizeRel"
        },
        {
            "name": "llvm-ninja-debug",
            "configurePreset": "llvm-ninja-debug"
        },
        {
            "name": "llvm-ninja-release",
            "configurePreset": "llvm-ninja-release"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "stopOnFailure": false
            }
        },
        {
            "name": "vs2022-debug",
            "displayName": "Debug Tests",
            "description": "运行 Debug 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2022",
            "configuration": "Debug"
        },
        {
            "name": "vs2022-release",
            "displayName": "Release Tests",
            "description": "运行 Release 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2022",
            "configuration": "Release"
        },
        {
            "name": "vs2022-relwithdebinfo",
            "displayName": "RelWithDebInfo Tests",
            "description": "运行 RelWithDebInfo 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2022",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs2022-minsizerel",
            "displayName": "MinSizeRel Tests",
            "description": "运行 MinSizeRel 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2022",
            "configuration": "MinSizeRel"
        },
        {
            "name": "vs2017-debug",
            "displayName": "Debug Tests",
            "description": "运行 Debug 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2017",
            "configuration": "Debug"
        },
        {
            "name": "vs2017-release",
            "displayName": "Release Tests",
            "description": "运行 Release 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2017",
            "configuration": "Release"
        },
        {
            "name": "vs2017-relwithdebinfo",
            "displayName": "RelWithDebInfo Tests",
            "description": "运行 RelWithDebInfo 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2017",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "vs2017-minsizerel",
            "displayName": "MinSizeRel Tests",
            "description": "运行 MinSizeRel 配置的单元测试",
            "inherits": "test-base",
            "configurePreset": "vs2017",
            "configuration": "MinSizeRel"
        },
        {
            "name": "llvm-ninja-debug",
            "displayName": "Debug Tests",
            "inherits": "test-base",
            "configurePreset": "llvm-ninja-debug"
        },
        {
            "name": "llvm-ninja-release",
            "displayName": "Release Tests",
            "inherits": "test-base",
            "configurePreset": "llvm-ninja-release"
        }
    ]
}